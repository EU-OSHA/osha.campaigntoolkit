<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="osha">

  <metal:javascript fill-slot="javascript_head_slot">
      <script type="text/javascript" language="javascript">
          $(function() {
              // setup ul.tabs to work as tabs for each div directly under
              // div.panes
              $("ul.tabs").tabs("div.panes > div");

              // Hide the tool example highlights on the 'Examples' tab
              $("a#examples").click(function(){
                  $("#highlightsContainer").hide();
              });
              $("a#overview").click(function(){
                  $("#highlightsContainer").show();
              });
        });
    </script>
  </metal:javascript>
  <metal:css fill-slot="css_slot"></metal:css>

<body>

<div metal:fill-slot="main">
    <div id="mainContent">
        <h1 tal:content="here/Title"></h1>
        <p class="documentDescription" tal:content="here/Description" />

        <div class="panes">
            <div class="overview">
                <div tal:content="structure here/getText">Body text</div>
            </div>


            <div class="examples">
                <h3>Examples</h3>
                <ul id="examplelist" tal:define="items view/examples"
                    tal:condition="items">
                    <li tal:repeat="item items">
                        <div class="image-left"
                             tal:define="item_obj item/getObject"
                             tal:condition="item_obj/image|nothing">
                            <img tal:replace="structure item_obj/@@images/image/mini" />
                        </div>
                        <h3><a tal:attributes="href item/getURL"
                               tal:content="item/Title">Title</a></h3>
                        <p tal:content="item/Description">Description</p>
                    </li>
                </ul>
                <div class="visualClear"><!-- --></div>
            </div>

            <div class="visualClear"><!-- --></div>

        </div>
    </div>
</div>


</body>

</html>
