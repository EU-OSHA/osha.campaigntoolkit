<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="osha.campaigntoolkit">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
        <a class="link-parent"
           tal:attributes="href string:${context/aq_inner/aq_parent/absolute_url}"
           i18n:translate="">Back to Overview</a>
        <div class="image-right" tal:condition="context/image|nothing">
            <img tal:replace="structure context/@@images/image/mini" />
        </div>
        <div tal:content="structure context/text/output|nothing"></div>

        <div class="examples" tal:condition="view/examples">
            <h3>Examples</h3>
            <ul id="examplelist" tal:define="items view/examples"
                tal:condition="items">
                <li tal:repeat="item items">
                    <div class="image-left"
                         tal:define="item_obj item/getObject"
                         tal:condition="item_obj/image|nothing">
                        <img tal:replace="structure item_obj/@@images/image/mini" />
                    </div>
                    <h3><a tal:attributes="href item/getURL;
                                           class string:exampleLink"
                           tal:content="item/Title">Title</a></h3>
                    <p tal:content="item/Description">Description</p>
                </li>
            </ul>
            <div class="visualClear"><!-- --></div>
        </div>

    </metal:content-core>
</metal:content-core>

</body>
</html>
